{
  "builds": [
    { "src": "server.js", "use": "@vercel/node" }
  ],
  "rewrites": [
    // Ini adalah instruksi utama: Setiap request ke root domain (/) harus diarahkan ke index.html
    { "source": "/", "destination": "/index.html" },
    
    // Semua request lain (misalnya /register, /login, /key/user) diarahkan ke server.js
    { "source": "/(.*)", "destination": "server.js" }
  ]
}